<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#FA82E8" />
            <stroke
                android:width="5dp"
                android:color="#C934B3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>   
    </item>        
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FA82E8" />
            <stroke
                android:width="1dp"
                android:color="#C934B3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FA82E8"
                android:endColor="#C934B3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#C934B3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>